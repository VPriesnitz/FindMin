
public void main(String... args) {
  int[] array;
  int currentMin = 0;
  boolean currentMinFound = false;
  int k = 3;
  for (int i = 0; i < array.length; i++) {
    if (i % k == 0) {
      System.out.println("Min in slize: " + currentMin);
      currentMinFound = false;
    }
    if (!currentMinFound) {
      currentMin = array[i];
      currentMinFound = true;
      continue;
    }
    if (array[i] < currentMin) {
      currentMin = array[i];
    }
  }
}
